{
  "name": "repository-automator",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.2.1",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start-react": "react-scripts start",
    "build-react": "react-scripts build",
    "start-electron": "nodemon --watch ./public/* --exec \"electron .\" ",
    "dev": "concurrently  \"BROWSER=none npm run start-react\" \"wait-on http://localhost:3000 && npm run start-electron\" ",
    "postinstall": "electron-builder install-app-deps",
    "pack-app": "npm run build-react && electron-builder --dir",
    "pack-build": "electron-builder --dir",
    "build": "npm run build-react && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "electron": "^20.2.0",
    "electron-builder": "^23.3.3",
    "nodemon": "^2.0.19",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.tvo.npmbuilder",
    "productName": "NPM builder",
    "copyright": "NPM builder Copyrights",
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [
      "./extraResources/**"
    ],
    "win": {
      "icon": "./build/images/appicon.ico",
      "target": [
        "7z"
      ]
    }
  }
}
