{
    "name": "repository-automator",
    "version": "0.1.0",
    "private": true,
    "author": "Manuel Leung Chen",
    "description": "Electron app for running automations on repositories",
    "dependencies": {
    },
    "main": "public/electron.js",
    "homepage": "./",
    "scripts": {
        "start-react": "react-scripts start",
        "build-react": "react-scripts build",
        "test-react": "react-scripts test",
        "eject-react": "react-scripts eject",
        "start-electron": "nodemon --watch ./* --exec \"electron .\" ",
        "dev": "concurrently  \"BROWSER=none npm run start-react\" \"wait-on http://localhost:3000 && npm run start-electron\" ",
        "pack-mac": "npm run build-react && electron-builder -m -c.extraMetadata.main=build/electron.js",
        "pack-win": "npm run build-react && electron-builder -w -c.extraMetadata.main=build/electron.js",
        "pack-linux": "npm run build-react && electron-builder -l -c.extraMetadata.main=build/electron.js"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            "last 1 electron version",
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 electron version",
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "concurrently": "^7.5.0",
        "electron": "^21.2.2",
        "electron-builder": "^23.6.0",
        "nodemon": "^2.0.20",
        "wait-on": "^6.0.1",
        "bootstrap": "^5.2.1",
        "web-vitals": "^2.1.4"
    },
    "build": {
        "appId": "com.tvo.npmbuilder",
        "productName": "Repository Automator",
        "copyright": "Repository Automator Copyrights",
        "files": [
            "build/**/*"
        ],
        "directories": {
            "buildResources": "public"
        },
        "extraResources": [
            {
                "from": "./extraResources",
                "to": "",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "deb"
        }
    }
}